{{! templates/order.hbs }}
<div class="row form-group-lg" style="padding: 10px; background-color: #FF9900;">
  <div class="col-sm-5">
    {{input type="input" value=model.customerName classNames="form-control input-lg" placeholder="Name"}}
  </div>
  <div class="col-sm-5">
    {{input type="input" value=model.customerEmail classNames="form-control input-lg" placeholder="Email"}}
  </div>
  <div class="col-sm-2">
    {{input type="input" value=model.zipCode classBinding=":form-control :input-lg model.invalidZipCode:invalidInput" placeholder="Zip"}}
  </div>
</div>

<div style="border-bottom: 3px solid gray" class="row form-group-lg" style="padding: 10px; background-color: #FF9900;">
  <div class="col-sm-5">
    {{view "select" prompt="Choose clerk..." value=salesClerk content=controllers.application.clerkNames classBinding=":form-control model.invalidSalesClerk:invalidInput"}}
  </div>
  <div class="col-sm-5">
    {{view "select" prompt="Choose payment method..." value=paymentType content=controllers.application.payMethods classBinding=":form-control model.invalidPaymentType:invalidInput"}}
  </div>
  <div class="col-sm-2">
    <label><h3 class="text-center">{{model.orderNumber}}</h3></label>
  </div>
</div>

<!-- End of header ------------------------------------------------------------------------ -->

<table class="table table-bordered" style="border: 2px;">
  <tbody>
    <tr> 
      <td class="col-sm-1"></td>
      <td class="col-sm-1"><h3>Qty</h3></td>
      <td class="col-sm-3"><h3>Category</h3></td>
	  {{#if model.orderHasHenna}}
		<td class="col-sm-2"><h3>Henna Artist</h3></td>
	  {{/if}}
      <td class="col-sm-1 text-right">
	  	<table width="100%">
		<tr>
		<td align='left'><h3>Cost</h3></td>
		<td alight='right'>
		<button type='button' {{action 'toggleDiscount'}} {{bindAttr disabled='model.orderIsDiscounted'}} class='btn btn-default btn-lg'>
			<span class='glyphicon glyphicon-chevron-{{if toggleDiscount 'left' 'right'}}'></span>
		</button>
		</td>
		</tr>
		</table>
	  </td>
	  {{#if toggleDiscount}}
		<td class="col-sm-1 text-right"><h3>Discount (%)</h3></td>
	  {{/if}}
      <td class="col-sm-1 text-right"><h3>Tax</h3></td>
      <td class="col-sm-1 text-right"><h3>Total</h3></td>
    </tr>

	
	
	<!-- Start of orderlines ---------------------------------------------------------- -->

    {{#each orderline in orderlines}}
      {{order-line line=orderline tagName='' hennaArtists=hennaArtists multipleLines=multipleLines toggleDiscount=toggleDiscount}}
    {{/each}}

	<!-- End of orderlines ---------------------------------------------------------- -->
	
	
	<!-- New orderline row --------------------------------------------------------- -->
    <tr>
      <td class="col-sm-1 text-center">
        <button type="button" {{action 'newOrderLine'}} class="buttonVisible btn btn-default btn-lg plusButton">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
      </td>
      <td class="col-sm-11" colspan="{{formColSpan}}">&nbsp;</td>
    </tr>


	<!-- Order Total row ---------------------------------------------------------- -->
    <tr>
      <td class="col-sm-10 text-center" colspan="{{formColSpan}}">
        <button {{action 'completeOrder' 'completeordermodal' model}} {{bindAttr disabled='model.failValidation'}} id="completeOrderButton" class="btn completeOrderButton">
          COMPLETE ORDER
        </button>
      </td>
      <td class="col-sm-2 text-right lead">${{model.orderTotal}}</td>
    </tr>
  </tbody>
  <button {{action 'cashDrawer' 'cashdrawermodal' model}} class="btn">Cash Drawer</button>
</table>

